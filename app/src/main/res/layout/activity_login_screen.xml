<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#282224"
    tools:context="com.fa15be0013.umair.registration.LoginScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logofinal" />


            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/uicon"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_gravity="center">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:id="@+id/g"
                android:layout_width="match_parent"
                android:theme="@style/TextLabel">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtPassword"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>
             <!--Appearance.AppCompat.SearchResult.Title"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/btnLogin"
                    android:layout_width="170dp"
                    android:src="@drawable/black_signin"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Login" />

                <ImageView
                    android:paddingTop="5dp"
                    android:id="@+id/btnSignup"
                    android:layout_width="170dp"
                    android:src="@drawable/button_signup"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Signup" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:src="@drawable/micon"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <!--style="@style/Base.TextAppearance.AppCompat.SearchResult.Title"-->
                <android.support.v7.widget.AppCompatTextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff00"
                    android:textSize="14dp"
                    android:text="Register As A Restaurant Manager?"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
